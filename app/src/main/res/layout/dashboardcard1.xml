<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboardcard1"
        android:layout_width="@dimen/_205sdp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dashboardcard1image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_115sdp"
                android:contentDescription="@string/scroll_view_image_1"
                app:srcCompat="@drawable/horizontalscrollviewimage" />

            <TextView
                android:id="@+id/dashboardcard1text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/newsdetails"
                android:background="#454072"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>